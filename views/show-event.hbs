{{>header}}
<title>BabyCare-{{event.metaTitle}}</title>
<meta name="description" content={{event.metaDescription}}>
<meta name="keywords" content={{event.metaKeywords}}>

{{>navbar}}

{{>hero}}

<div class="container-fluid service py-5">
    <div class="row mx-3">
        <div class="col-md-9">
            <h2 class="text-center bg-primary text-light p-1">{{event.name}}</h2>
            <table class="table table-bordered text-light bg-primary text-center">
                <thead>
                    <tr>
                        <th>Timing</th>
                        <th>Lcation</th>
                        <th>Date</th>

                    </tr>

                </thead>
                <tbody>
                    <tr>
                        <td>{{event.time}}</td>
                        <td>{{event.location}}</td>
                        <td>{{event.date}}</td>

                    </tr>

                </tbody>
            </table>
            <p class="text-justify mb-3">{{event.shortDescription}}</p>
            <img src="/{{event.cover}}" height="400px" width="100%" alt="">
            <div class="card p-3">
                <p class="text-justify mb-3">{{event.longDescription}}</p>

            </div>
        </div>
        <div class="col-md-3">
            <h4 class="bg-primary text-center p-2 text-light">Our Other Events</h4>
            {{#each allEvents}}
            <a href="/event/{{_id}}" class="serviceSidebar d-block p-2 mb-1 text-light  fs-5 ps-4">{{name}}</a>
            {{/each}}
        </div>
    </div>

</div>

{{>footer}}